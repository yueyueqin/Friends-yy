<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--<com.cyan.ui.ActionBar-->
            <!--android:id="@+id/actionbar_comment"-->
            <!--style="@style/ActionBar_car" />-->

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_settings_item_down"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                style="@style/TextTheme.tipstheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="8dip"
                android:paddingLeft="8dip"
                android:paddingTop="8dip"
                android:text="汽车数量：" />

            <Spinner
                android:id="@+id/carinfo_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/user_sign_tips"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="2"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"></Spinner>
        </RelativeLayout>

        <LinearLayout

            android:id="@+id/caruser_pagerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/caruser_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.PagerTitleStrip
                    android:id="@+id/caruser_pagertitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></android.support.v4.view.PagerTitleStrip>

            </android.support.v4.view.ViewPager>

        </LinearLayout>
    </LinearLayout>
</ScrollView>