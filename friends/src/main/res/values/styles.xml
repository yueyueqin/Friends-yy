<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="backgroundColor">@color/background_color</item>
        <item name="itemBackgroundColor">@color/item_color</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>
    </style>

    <style name="BaseAppNightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryDark">@color/primary_dark_night</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="backgroundColor">@color/background_color_night</item>
        <item name="itemBackgroundColor">@color/item_color_night</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>

    </style>
    <!--取代原来的加载黑屏界面-->
    <style name="BaseAppTheme.AppTheme">
        <!-- Customize your theme here. -->
        <item name="background">@drawable/icon_en<!----></item>
    </style>

    <style name="BaseAppNightTheme.AppNightTheme">
        <!-- Customize your theme here. -->

    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarTitleAppearance</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>




    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <!--  <item name="android:windowExitAnimation">@anim/push_bottom_out</item> -->
    </style>

    <style name="MyDialogStyleBottom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>


    <style name="Slider">
        <item name="thickness">2dp</item>
        <item name="radius">6dp</item>
        <item name="color">?attr/colorPrimary</item>
        <item name="textColor">@android:color/white</item>
        <item name="textSize">12sp</item>
        <item name="dark">?attr/dark</item>
    </style>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionBarSize">48dp</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <!-- Toolbar popup主题 -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat"/>

    <!-- 加油站部分 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@drawable/frame_dialog</item>
    </style>

    <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@color/translucent</item>
    </style>

    <!--违章查询部分-->
    <style name="csy_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/csy_row_h</item>
        <item name="android:paddingLeft">@dimen/csy_pd</item>
    </style>

    <style name="csy_row1" parent="csy_row">
        <item name="android:background">@drawable/csy_form_row</item>
    </style>

    <style name="csy_row_label">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/csy_label_w</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/csy_label</item>
    </style>

    <style name="csy_textbox">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/csy_text</item>
        <item name="android:textColorHint">@color/csy_hint</item>
        <item name="android:background">@drawable/csy_textbox</item>
        <item name="android:textSize">@dimen/csy_text_ts</item>
    </style>

    <style name="csy_textbox1" parent="csy_textbox">
        <item name="android:layout_marginRight">@dimen/csy_icon_w</item>
    </style>

    <style name="csy_row_icon">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/csy_icon_w</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <!--地图点击Menu部分的主题-->
    <!-- Base application theme. -->
    <style name="AppTheme_Mapmenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--预约加油信息填写界面主题-->
    <style name="TextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_weight">1</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:background">@null</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#242424</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextTheme.tipstheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextTheme.tipstheme_second">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextTheme.tipstheme_buttontext">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--数字选择器部分-->

    <!-- 弹出框 -->
    <style name="AnimBottom_time" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in_time</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out_time</item>
    </style>

    <!--车辆信息录入界面部分-->
    <style name="ActionBar_car">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="ActionBarHomeLogo">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>

    <style name="ActionBarHomeItem">
        <item name="android:layout_width">@dimen/actionbar_item_width</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">1px</item>

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>

    </style>

    <style name="ActionBarProgressBar" parent="@android:style/Widget.ProgressBar.Large">
    </style>

    <style name="ActionBarItem">
        <item name="android:layout_width">@dimen/actionbar_item_width</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">1px</item>

    </style>


    <!--扫描二维码界面部分-->

<style name="homesailingLvOne_line_H">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">3dp</item>
<item name="android:background">@color/title_color</item>
</style>

<style name="lv_line_H">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">0.1dp</item>
<item name="android:background">@color/black6c</item>
</style>



</resources>